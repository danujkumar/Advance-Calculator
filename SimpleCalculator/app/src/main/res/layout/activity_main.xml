<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="314dp"
        android:layout_height="107dp"
        android:text="@string/welcome"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />

    <Button
        android:id="@+id/equal"
        android:layout_width="59dp"
        android:layout_height="60dp"
        android:text="@string/calc"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.815" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="330dp"
        android:layout_height="186dp"
        android:layout_marginBottom="148dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/solution"
        app:layout_constraintVertical_bias="0.441">

        <LinearLayout
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/ones"
                android:layout_width="55dp"
                android:layout_height="63dp"
                android:text="@string/one"
                android:textSize="20sp" />

            <Button
                android:id="@+id/fives"
                android:layout_width="55dp"
                android:layout_height="63dp"
                android:text="@string/five"
                android:textSize="20sp" />

            <Button
                android:id="@+id/nines"
                android:layout_width="55dp"
                android:layout_height="63dp"
                android:text="@string/nine"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/twos"
                android:layout_width="55dp"
                android:layout_height="63dp"
                android:text="@string/two"
                android:textSize="20sp" />

            <Button
                android:id="@+id/sixs"
                android:layout_width="55dp"
                android:layout_height="63dp"
                android:text="@string/six"
                android:textSize="20sp" />

            <Button
                android:id="@+id/zeros"
                android:layout_width="55dp"
                android:layout_height="63dp"
                android:text="@string/zero"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/threes"
                android:layout_width="55dp"
                android:layout_height="63dp"
                android:text="@string/three"
                android:textSize="20sp" />

            <Button
                android:id="@+id/sevens"
                android:layout_width="55dp"
                android:layout_height="63dp"
                android:text="@string/seven"
                android:textSize="20sp" />

            <Button
                android:id="@+id/dots"
                android:layout_width="55dp"
                android:layout_height="63dp"
                android:text="@string/dots"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/fours"
                android:layout_width="55dp"
                android:layout_height="63dp"
                android:text="@string/four"
                android:textSize="20sp" />

            <Button
                android:id="@+id/eights"
                android:layout_width="55dp"
                android:layout_height="63dp"
                android:text="@string/eight"
                android:textSize="20sp" />

            <Button
                android:id="@+id/open_bracket"
                android:layout_width="55dp"
                android:layout_height="63dp"
                android:text="@string/open_bracket"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/del"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:text="@string/delete"
                android:textSize="20sp" />

            <Button
                android:id="@+id/clears"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:text="@string/all_clear"
                android:textSize="20sp" />

            <Button
                android:id="@+id/close_bracket"
                android:layout_width="55dp"
                android:layout_height="63dp"
                android:text="@string/close_bracket"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/solution"
        android:layout_width="347dp"
        android:layout_height="81dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/hin"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:id="@+id/control_system"
        android:layout_width="306dp"
        android:layout_height="67dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/equal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/pluss"
            android:layout_width="55dp"
            android:layout_height="63dp"
            android:text="@string/plus"
            android:textSize="24sp" />

        <Button
            android:id="@+id/minuss"
            android:layout_width="55dp"
            android:layout_height="63dp"
            android:layout_marginStart="5dp"
            android:text="@string/minus"
            android:textSize="24sp" />

        <Button
            android:id="@+id/muls"
            android:layout_width="55dp"
            android:layout_height="63dp"
            android:layout_marginStart="5dp"
            android:text="@string/mul"
            android:textSize="24sp" />

        <Button
            android:id="@+id/divs"
            android:layout_width="55dp"
            android:layout_height="63dp"
            android:layout_marginStart="5dp"
            android:text="@string/divide"
            android:textSize="24sp" />

        <Button
            android:id="@+id/up_solve"
            android:layout_width="55dp"
            android:layout_height="63dp"
            android:layout_marginStart="5dp"
            android:text="@string/power"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>